<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fruit_rtl_layout">

    <ImageView
        android:layout_height="@dimen/fact_img_medium_height"
        android:src="@drawable/coffee_fruit"
        style="@style/fact_image"
        android:id="@+id/fruit_image"/>

    <TextView
        android:text="@string/fruit_fact_data"
        style="@style/fact_data"
        android:layout_below="@id/fruit_image"
        android:id="@+id/fact_data_text_view"/>

    <ImageView
        android:src="@drawable/coffee_owl"
        style="@style/owl_coffee_image"
        android:id="@+id/fruit_owl_coffee_img"/>

    <Button
        style="@style/previous_button"
        android:onClick="displayPreviousFact"
        android:id="@+id/fruit_previous_btn"/>

    <Button
        android:onClick="displayNextFact"
        style="@style/next_button"
        android:id="@+id/fruit_next_btn"/>

</RelativeLayout>