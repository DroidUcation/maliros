<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sport_rtl_layout">

    <ImageView
        android:layout_height="@dimen/fact_img_big_height"
        style="@style/fact_image"
        android:id="@+id/sport_image"/>

    <TextView
        style="@style/fact_data"
        android:layout_below="@id/sport_image"
        android:id="@+id/sport_fact_text_view"/>

    <ImageView
        android:src="@drawable/coffee_owl"
        style="@style/owl_coffee_image"
        android:id="@+id/sport_owl_coffee_img"
        android:layout_below="@id/sport_fact_text_view"
        />

    <Button
        style="@style/previous_button"
        android:onClick="displayPreviousFact"
        android:id="@+id/sport_previous_btn"/>

</RelativeLayout>