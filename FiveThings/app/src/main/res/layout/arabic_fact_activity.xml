<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/arabic_coffee"
        style="@style/fact_image"
        android:id="@+id/arabic_image"/>

    <TextView
        android:id="@+id/fact_data_text_view"
        android:layout_below="@id/arabic_image"
        android:text="@string/arabic_fact_data"
        style="@style/fact_data"
        />

    <ImageView
        android:src="@drawable/coffee_owl"
        style="@style/owl_coffee_image" />

    <Button
        style="@style/previous_button"
        android:onClick="displayPreviousFact"/>

    <Button
        android:onClick="displayNextFact"
        style="@style/next_button" />

</RelativeLayout>