<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fact_data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/fact_data_text_size</item>
        <item name="android:background">@drawable/in_message_bg</item>
        <item name="android:textColor">@color/factDataTextColor</item>
        <item name="android:layout_marginTop">@dimen/fact_data_margin_top</item>
        <item name="android:layout_marginRight">@dimen/fact_data_margin_right</item>
        <item name="android:layout_marginLeft">@dimen/fact_data_margin_left</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="owl_coffee_image">
        <item name="android:layout_width">@dimen/owl_coffee_img_width</item>
        <item name="android:layout_height">@dimen/owl_coffee_img_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_below">@id/fact_data_text_view</item>
    </style>

    <style name="fact_image">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="previous_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/previous_btn</item>
    </style>

    <style name="next_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/next_btn</item>
    </style>

    <style name="main_act_title">
        <item name="android:textSize">@dimen/main_act_title_text_size</item>
        <item name="android:textColor">@color/mainTitleTextColor</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/mainTitleBackground</item>
        <item name="android:padding">@dimen/five_title_padding</item>
    </style>

</resources>
