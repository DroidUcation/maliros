<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maliros.giftcard">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.AddCardActivity"
            android:label="@string/add_card_activity"
            android:parentActivityName="activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.DisplayCardsActivity"
            android:label="@string/add_card_activity"
            android:parentActivityName="activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.UpdateBalanceActivity"
            android:label="@string/add_card_activity"
            android:parentActivityName="activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SearchCardsActivity"
            android:label="@string/add_card_activity"
            android:parentActivityName="activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activities.MainActivity" />
        </activity>


        <provider android:name=".contentproviders.GiftCardProvider"
            android:authorities="com.maliros.giftcard.contentproviders.GiftCardProvider"
            android:exported="false" />



    </application>

</manifest>
