
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    style="@style/card_style"
    card_view:cardCornerRadius="@dimen/eight"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_card"
                style="@style/linearLayout_ct2"

                android:text="Card" />

            <TextView
                android:id="@+id/tv_type_of_card"
                style="@style/linearLayout_ct2"/>
            <Spinner
                android:id="@+id/type_spinner"
                style="@style/linearLayout_ct2" />


        </LinearLayout>
        <ImageView
            android:id="@+id/photo"
            style="@style/photo_card_style"
            android:contentDescription="@string/photo_card"
            />

        <TextView
            android:id="@+id/balance"
            style="@style/tv_balance"
            android:layout_below="@+id/photo" />

        <TextView
            android:id="@+id/name"
            style="@style/tv_card_name"
            android:layout_below="@+id/balance" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
